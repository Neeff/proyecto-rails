

<h1>Empleados</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Cargo</th>
      <th>Sueldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.apellido %></td>
        <td><%= empleado.cargo %></td>
        <td><%= empleado.sueldo %></td>
        <td><%= link_to 'Mostrar', empleado, :class => 'btn btn-success'%></td>
        <td><%= link_to 'Editar', edit_empleado_path(empleado), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Borrar', empleado, method: :delete, data: { confirm: 'Estas Seguro(a)?' } , :class => 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Empleado', new_empleado_path , :class => 'btn btn-success'%>
